<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center">

	
	<LinearLayout 
        		android:id="@+id/pickerGroup" 
        		android:layout_width="match_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal"
				android:layout_weight="1.0">
				
				
		<LinearLayout 
				android:layout_height="match_parent" 
				android:layout_width="wrap_content" 
				android:id="@+id/viewGroup_blank1"
				android:layout_weight="1.0">
		</LinearLayout>
				
		<LinearLayout 
				android:layout_height="match_parent" 
				android:layout_width="wrap_content" 
				android:id="@+id/viewGroup_blank2"
				android:orientation="vertical"
				android:layout_weight="0.5">
				
				
				<LinearLayout 
  					android:layout_height="wrap_content" 
  					android:layout_width="match_parent"
  					android:id="@+id/layout_blank1"
  					android:layout_weight="2.0"
  					android:paddingTop="25px">
        			
  					
  				</LinearLayout>
				
				 <Button 
        			android:layout_width="fill_parent"
        			android:background="@drawable/btn_plus_gradient"
        			android:layout_height="35px" 
        			android:id="@+id/btnPlus"
        			android:text="+"
        			android:gravity="center"
        			android:layout_weight="1.0">
        			
        		</Button>

        		<EditText
        			android:text="17" 
        			android:id="@+id/txtQuantity" 
        			android:layout_width="fill_parent"
        			android:background="@drawable/etxt_gradient"
        			android:layout_height="45px"
  					android:gravity="center"
  					android:selectAllOnFocus="true"
  					android:layout_weight="0.0"
  					android:numeric="integer">
  					
  				</EditText>
  				
  				
  				<Button 
        			android:layout_width="fill_parent"
        			android:background="@drawable/btn_subtract_gradient"
        			android:layout_height="35px"
        			android:id="@+id/btnSubtract" 
        			android:text="-"
        			android:gravity="center"
        			android:layout_weight="1.0">
        		</Button>
  				
  				<LinearLayout 
  					android:layout_height="wrap_content" 
  					android:layout_width="match_parent" 
  					android:id="@+id/layout_blank2"
  					android:layout_weight="2.0"
  					android:paddingBottom="25px">
  					
  				</LinearLayout>
				
				</LinearLayout>
				
		<LinearLayout 
				android:layout_height="match_parent" 
				android:layout_width="wrap_content" 
				android:id="@+id/viewGroup_blank3"
				android:layout_weight="1.0">
				
		</LinearLayout>
				
				
        		
        </LinearLayout>
       
		
		 <LinearLayout 
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:id="@+id/btnlayout" 
    		android:background="#989898"
    		android:gravity="center"
    		android:paddingTop="5px"
    		android:layout_weight="0.0">
        
      		 	 <Button 
       		 		android:layout_width="fill_parent"
        			android:layout_weight="1.0" 
        			android:layout_height="fill_parent"
        			android:id="@+id/btnSet" 
        			android:text="Set"></Button>

        		<Button 
       				android:layout_width="fill_parent" 
       				android:layout_weight="1.0" 
       				android:layout_height="fill_parent"
       				android:id="@+id/btnCancel" 
       				android:text="Cancel"></Button>
      
    	</LinearLayout>


</LinearLayout>
